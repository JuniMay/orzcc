    arr[12] = 222.22;
    arr[13] = 101;
    arr[14] = 77;
    arr[15] = 44;
    arr[16] = 35;
    arr[17] = 20.54;
    arr[18] = 99.99;
    arr[19] = 888.88;

    printf("%a",select(10, 20));

    return 0;
}
